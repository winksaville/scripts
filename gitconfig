[user]
	email = wink@saville.com
	name = Wink Saville
	signingkey = /home/wink/.ssh/git-commits-wink@saville.com.pub
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/git-commits-allowed-signers
[gpg]
	format = ssh
[commit]
	gpgsign = true
[core]
	excludesfile = /home/wink/.gitignore
[color]
	ui = auto
[sendemail]
        smtpEncryption = tls
        smtpServer = smtp.gmail.com
        smtpServerPort = 587
	smtpUser = wink@saville.com
[credential]
	helper = store --file /home/wink/.gitcreds
[gui]
	warndetachedcommit = true
[alias]
	xdelmaster = !git checkout -q origin/master && git branch -d master 2> null || :
	delmaster = !git xdeletemaster && git submodule foreach 'git delmaster'
	sync = !git pull origin master && git submodule sync --recursive && git submodule update --init --recursive
[http]
	cookiefile = /home/wink/.gitcookies
[merge]
	conflictstyle = diff3
[pull]
	ff = only
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[diff]
	tool = meld
